/**index.wxss**/
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.userinfo{
  margin-top: 0;
  height: 100rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}
.userinfo-avatar{
  border: 1px solid rgba(0, 0, 0, 0.1);

}

.userinfo-avatar[size]{
  width: 90rpx;
  height: 90rpx;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 40rpx;
  color: #008fd5;
  text-align: center;
  align-items: center;
  padding-left: 20rpx;
  margin-left: 100rpx;
}

.userinfo-nickname::after {
  border: none;
}

.userinfo-nickname-wrapper {
  flex: 1;
}

